<odoo>
    <record id="product_template_action_service" model="ir.actions.act_window">
        <field name="name">Services</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="view_type">form</field>
        <field name="search_view_id" ref="stock.product_template_search_form_view_stock"/>
        <field name="context">{'search_default_services': 1, 'default_type': 'service'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new service
            </p>
        </field>
    </record>
    <!-- Menu Items -->

    <menuitem id="menu_fsm_service"
              name="Service"
              action="osi_orr_fieldservice_extend.product_template_action_service"
              parent="fieldservice.data"
              sequence="100"/>

</odoo> 
