<odoo>
    <record id="cancel_void_payment_form" model="ir.ui.view">
        <field name="name">cancel_void_payment_form</field>
        <field name="model">cancel.void.payment</field>
        <field name="arch" type="xml">
            <form string="Void Payment Wizard">
                <group>
                    <field name="reason" required="1"/>
                </group>
                <footer>
                    <button class="oe_highlight" name="cancel_payment_entry" string="Confirm" type="object"/>
                    <button class="oe_link" special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
