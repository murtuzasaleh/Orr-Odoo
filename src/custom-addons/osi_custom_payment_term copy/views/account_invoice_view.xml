<?xml version="1.0"?>
<odoo>
    <record id="invoice_form_discounts" model="ir.ui.view">
        <field name="name">account.invoice.form.discount</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="shipping_lines_total" invisible="1"/>
            </field>
            <field name="partner_bank_id" position="after">
                <field name="check_payment_discount" invisible="1"/>
                <field name="discount_taken" readonly="1" attrs="{'invisible': [('state', '!=', 'paid'), ('check_payment_discount', '=', False)]}"/>
            </field>
            <xpath expr="//page[@name='other_info']/group/group[2]" position="after">
                <group string="Discount Details" attrs="{'invisible': [('discount_amt', '=', 0)]}">
                    <field name="discount_amt" readonly="1"/>
                    <field name="discount_date" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>

    <!--Customer Invoice Tree -->
    <record id="invoice_tree_discount" model="ir.ui.view">
        <field name="name">account.invoice.tree.discount</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_tree"/>
        <field name="arch" type="xml">
            <field name="date_due" position="after">
                <field name="discount_amt"/>
                <field name="discount_date"/>
            </field>
        </field>
    </record>

    <!-- Vendor Bill Form View -->
    <record id="invoice_supplier_form_discounts" model="ir.ui.view">
        <field name="name">account.invoice.form.discount</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="shipping_lines_total" invisible="1"/>
            </field>
            <field name="move_id" position="before">
                <field name="check_payment_discount" invisible="1"/>
                <field name="discount_taken" readonly="1" attrs="{'invisible': [('state', '!=', 'paid'), ('check_payment_discount', '=', False)]}"/>
            </field>
            <xpath expr="//page[@name='other_info']/group/group[2]" position="after">
                <group string="Discount Details" attrs="{'invisible': [('discount_amt', '=', 0)]}">
                    <field name="discount_amt" readonly="1"/>
                    <field name="discount_date" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Vendor Bill Tree -->
    <record id="supplier_invoice_tree_discount" model="ir.ui.view">
        <field name="name">account.invoice.supplier.tree.discount</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_tree"/>
        <field name="arch" type="xml">
            <field name="date_due" position="after">
                <field name="discount_amt"/>
                <field name="discount_date"/>
            </field>
        </field>
    </record>
</odoo>
