<odoo>

    <record id="contract_contract_form_view_inherit_so_recurring" model="ir.ui.view">
        <field name="name">contract.contract.form.recurring.sale.recurring</field>
        <field name="model">contract.contract</field>
        <field name="inherit_id" ref="contract.contract_contract_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='action_contract_send']" position="before">
                <button name="activate_contract"
                        type="object"
                        string="Activate Contract"
                        states="draft" class="btn-primary"/>
            </xpath>
            <xpath expr="//header/button[@name='action_cancel_contract_termination']" position="after">
                <field name="state" widget="statusbar"/>
            </xpath>
            <field name="contract_type" position="attributes">
                <attribute name="invisible">0</attribute>
            </field>
            <group name="recurring_invoices" position="after">
                <group>
                    <field name="billing_partner_id" context="{'show_address': 1}" options='{"always_reload": True}'/>
                </group>
                <group col="6">
                    <field name="advance_number" attrs="{'invisible': [('contract_type', '=', 'purchase')]}"/>
                    <field name="min_bill_hours"/>
                    <field name="per_visit_amt_restriction"/>
                </group>
                <group col="4">
                    <field name="is_po_required"/>
                    <field name="po_number"/>
                    <field name="default_analytic_account_id"/>
                    <field name="default_analytic_account_tag_id"/>
                    <field name="service_start_date"/>
                    <field name="service_end_date"/>
                    <field name="old_contract_id"/>
                    <field name="initial_sale_id"/>
                </group>
            </group>
            <xpath expr="//page[@name='recurring_invoice_line']/field[@name='note']" position="replace"/>
            <page name="info" position="after">
                <page name="notes" string="Notes">
                    <separator string="General FSM Notes"/>
                    <field name="fsm_notes" nolable="1"/>
                    <separator string="Notes"/>
                    <field name="note"/>
                </page>
            </page>
        </field>
    </record>

    <record id="contract_contract_search_view_inherit_so_recurring" model="ir.ui.view">
        <field name="name">contract.contract search view (in contract)</field>
        <field name="model">contract.contract</field>
        <field name="inherit_id" ref="contract.contract_contract_search_view"/>
        <field name="arch" type="xml">
            <field name="pricelist_id" position="after">
                <field name="billing_partner_id"/>
                <field name="po_number"/>
                <field name="default_analytic_account_id"/>
                <field name="default_analytic_account_tag_id"/>
                <field name="service_start_date"/>
                <field name="service_end_date"/>
                <field name="old_contract_id"/>
                <field name="initial_sale_id"/>
                <field name="state"/>
            </field>
            <filter name="group_by_date_end" position="after">
                <filter string="Billing Customer"
                        name="billing_partner_id"
                        domain="[]"
                        context="{'group_by':'billing_partner_id'}"/>
                <filter name="default_analytic_account_id"
                        string="Default Analytic Account"
                        context="{'group_by': 'default_analytic_account_id'}"
                        />
                <filter name="default_analytic_account_tag_id"
                        string="Default Analytic Tags"
                        context="{'group_by': 'default_analytic_account_tag_id'}"
                        />
                <filter name="service_start_date"
                        string="Service Start Date"
                        context="{'group_by': 'service_start_date'}"
                        />
                <filter name="service_end_date"
                        string="Service End Date"
                        context="{'group_by': 'service_end_date'}"
                        />
                <filter name="old_contract_id"
                        string="Copied from"
                        context="{'group_by': 'old_contract_id'}"
                        />
                <filter name="initial_sale_id"
                        string="Initial sale order"
                        context="{'group_by': 'initial_sale_id'}"
                        />
                <filter name="state"
                        string="State"
                        context="{'group_by': 'state'}"
                        />
            </filter>
        </field>
    </record>

</odoo>
