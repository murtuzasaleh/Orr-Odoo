<odoo>

    <record id="fsm_equipment_sale_order_lines" model="ir.ui.view">
        <field name="model">fsm.order</field>
        <field name="inherit_id" ref="osi_orr_fieldservice_extend.view_fsm_order_form_inherit_sign"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='sale_order_line_ids']/tree//field[@name='product_id']" position="after">
                <field name="fsm_equipment_id"/>
            </xpath>
        </field>
    </record>

    <record id="fsm_equipment_show_when_set" model="ir.ui.view">
        <field name="model">fsm.order</field>
        <field name="inherit_id" ref="fieldservice.fsm_order_form"/>
        <field name="arch" type="xml">
            <field name="equipment_id" position="attributes">
                <attribute name="attrs">{'invisible': [('equipment_id', '=', False)]}</attribute>
            </field>
        </field>
    </record>

    <record id="fsm_order_form_notes" model="ir.ui.view">
        <field name="name">fsm.order.form.notes</field>
        <field name="model">fsm.order</field>
        <field name="inherit_id" ref="fieldservice.fsm_order_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="Notes" name="notes_page">
                    <group string="Private Notes" name="private_notes_grp">
                        <field name="private_notes" nolabel="1" widget="html"/>
                        <!-- <label for="previous_private_notes" /> -->
                        <field name="previous_private_notes" nolabel="0"/>

                    </group>
                    <group string="Public Notes" name="public_notes_grp">
                        <field name="public_notes" nolabel="1" widget="html"/>
                        <field name="previous_public_notes" nolabel="0"/>
                         <!-- <label for="previous_private_notes" /> -->
                    </group>
                </page>
            </notebook>
        </field>
    </record>
    
</odoo>